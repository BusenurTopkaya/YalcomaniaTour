@using YalcomaniaTour.Entities.ValueObjects
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Giriş Formu</div>

                    @*false: tüm hata mesajlarını - property'lerden gelen hata mesajlarını da*@
                    @Html.ValidationSummary(false)

                    <div class="card-body">
                        @using (Html.BeginForm())
                        {

                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">Kullanıcı Adı</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Şifre</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                                </div>
                            </div>


                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Giriş
                                </button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
