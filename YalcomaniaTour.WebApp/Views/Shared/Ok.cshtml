@using YalcomaniaTour.WebApp.ViewsModel
@model OkViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/login-register.css" rel="stylesheet" />

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">@Model.Header</div>
                    <div class="card-body">

                        <div class="text-success">
                            <h2>@Model.Title</h2>
                            <hr />
                            <p class="text-justify">
                                @foreach (string msg in Model.Items)
                                {
                                    @msg <br />
                                }
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@{
    string js = string.Empty;

    if (Model.IsRedireting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }

}

<script>
        @Html.Raw(js);
</script>

